@model List<Simple_Calculator.Models.CalcModel>
<style>
    .calc-button{
        background-color:deeppink;
        color:white;
        box-shadow: 2px 2px 5px pink;
    }
    .calc-button:hover{
        background-color: pink;
    }
    .Lines{
        background-color: lightpink;
        width: 200px;
        border-radius: 20px;
    }
    .Disp{
        background-color: mistyrose;
        font-family: 'Arial Rounded MT';
        font-size: 30px;
        color: deeppink;
        width: 300px;
        border-radius: 20px;
    }
    .op-button{
        background-color: hotpink;
        color: white;
        box-shadow: 2px 2px 5px pink;
    }
    .op-button:hover{
        background-color: pink;
    }
    .num-button{
        background-color: mistyrose;
        color: deeppink;
        box-shadow: 2px 2px 5px pink;
    }
    .num-button:hover{
            background-color: pink;
    }
    .zero-button{
        background-color: mistyrose;
        color: deeppink;
        box-shadow: 2px 2px 5px pink;
    }
    .zero-button:hover{
            background-color: pink;
    }
    .dot-button{
        background-color: mistyrose;
        color: deeppink;
        box-shadow: 2px 2px 5px pink;
    }
    .dot-button:hover{
            background-color: pink;
    }
    .coma-button{
        background-color: mistyrose;
        color: deeppink;
        box-shadow: 2px 2px 5px pink;
    }
    .coma-button:hover{
            background-color: pink;
    }
    .eq-button{
        background-color: deeppink;
        color:white;
        box-shadow: 2px 2px 5px pink;
    }
    .eq-button:hover{
        background-color: pink;
    }
</style>
    <center>
        <div class="Lines">

            <div class="Disp">
                <partial name="_display"/>
            </div>

                 <div class="firstline">
                    <div class="calc-button" id="del" value="del">âŒ«</div>
                    <div class="calc-button" id="ac">AC</div>
                    <div class="op-button" id="div" value="div">/</div>
                    <div class="op-button" id="mul" value="mul">*</div>
                </div>

                <div class="secondline">
                    <div class="num-button" id="7">7</div>
                    <div class="num-button" id="8">8</div>
                    <div class="num-button" id="9">9</div>
                    <div class="op-button" id="sub">-</div>
                </div>

                <div class="thirdline">
                    <div class="num-button" id="4">4</div>
                    <div class="num-button" id="5">5</div>
                    <div class="num-button" id="6">6</div>
                    <div class="op-button" id="add">+</div>
                </div>

              
                <div class="fourthline">
                    <div class="num-button" id="1">1</div>
                    <div class="num-button" id="2">2</div>
                    <div class="num-button" id="3">3</div>
                    <div class="zero-button" id="0">0</div>
        </div>
                   

                <div class="fifthline">
                    <div class="dot-button" id="dot">.</div>
                    <div class="coma-button" id="coma">,</div>
                    <button class="eq-button" id="eq">=</button>
                </div>
        </div>
    </center>
@section Scripts{

<script src="~/js/ButtonHandler.js"></script>
}
